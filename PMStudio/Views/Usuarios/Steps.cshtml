@model IEnumerable<PMStudio.Models.Entities.PasosUsuariosDetalle>
@{
    ViewData["Title"] = "Mis Pasos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<partial name="_Success" />
<partial name="_Warning" />

<div class="">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Plantilla
                </th>
                <th>
                    #
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Descripcion
                </th>
                <th>
                    Estado
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PlantillaPasoDetalleNavigation.InstanciaPlantillaNavigation.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PlantillaPasoDetalleNavigation.PasoNavigation.Numero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PlantillaPasoDetalleNavigation.PasoNavigation.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PlantillaPasoDetalleNavigation.PasoNavigation.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PlantillaPasoDetalleNavigation.EstadoNavigation.Nombre)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="ManageUserSteps" asp-route-id="@item.IdPasosUsuarios">Gestionar</a>
                        <a class="btn btn-success" asp-action="RedirectUserSteps" asp-route-id="@item.IdPasosUsuarios">Redireccionar</a>
                        <a class="btn btn-danger" asp-action="DenyUserSteps" asp-route-id="@item.IdPasosUsuarios">Rechazar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Styles {
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
}

@section Scripts {

}